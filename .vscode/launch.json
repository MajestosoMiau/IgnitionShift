{
    "version": "0.2.0",
    "configurations": [
      
      {
        "type": "node",
        "request": "launch",
        "name": "Launch server",
        "program": "${workspaceFolder}/node.js",  // Point to the node.js file
        "cwd": "${workspaceFolder}",
        "skipFiles": ["<node_internals>/**"]
      },
      {
        "type": "firefox",
        "request": "launch",
        "name": "Launch localhost",
        "url": "http://localhost:3000",  // You can set this to your root URL
        "webRoot": "${workspaceFolder}"
      },
      {
        "command": "npm start",
        "name": "Run npm start",
        "request": "launch",
        "type": "node-terminal"
    },


